<h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Category</h1>

<%= form_with(model: @category, local: true, html: { class: 'space-y-6' }) do |form| %>
  <div class="bg-white shadow-lg rounded-lg p-6">
    <div class="mb-4">
      <%= form.label :name, class: 'text-lg font-semibold text-gray-700' %>
      <%= form.text_field :name, class: 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="flex justify-end">
      <%= form.submit 'Save Changes', class: 'px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600' %>
    </div>
  </div>
<% end %>

<div class="mt-6 flex space-x-4">
  <%= link_to 'Back to Categories', categories_path, class: 'px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400' %>
</div>
