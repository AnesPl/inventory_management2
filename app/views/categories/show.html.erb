<h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @category.name %></h1>

<div class="grid grid-cols-1 sm:grid-cols-2 gap-8 mb-8">
  <div class="text-lg text-gray-600">
    <p><strong class="font-semibold">Category Name:</strong> <%= @category.name %></p>
  </div>

  <div>
    <h2 class="text-2xl font-semibold mb-4">Products in this Category</h2>
    <ul class="space-y-2">
      <% @category.products.each do |product| %>
        <li class="border border-gray-200 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-gray-700"><%= product.name %></h3>
          <p class="text-sm text-gray-500"><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
          <p class="text-sm text-gray-500"><strong>Stock:</strong> <%= product.stock %></p>
          <%= link_to 'View Product', product_path(product), class: 'text-blue-500 hover:text-blue-700' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="mt-6 flex space-x-4">
  <%= link_to 'Edit', edit_category_path(@category), class: 'px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600' %>
  <%= link_to 'Back to Categories', categories_path, class: 'px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400' %>
</div>
