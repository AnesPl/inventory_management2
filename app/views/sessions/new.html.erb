<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="bg-white p-6 rounded-lg shadow-md w-96">
    <h1 class="text-2xl font-semibold mb-4 text-center">Login</h1>

    <%= form_with url: login_path, local: true, class: "space-y-4" do |form| %>
      <% if flash[:error] %>
        <div class="bg-red-100 text-red-700 p-2 rounded">
          <%= flash[:error] %>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "block text-gray-700 font-medium" %>
        <%= form.text_field :email, class: "w-full p-2 border rounded-lg" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-gray-700 font-medium" %>
        <%= form.password_field :password, class: "w-full p-2 border rounded-lg" %>
      </div>

      <div class="text-center">
        <%= form.submit "Log In", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      </div>
    <% end %>

    <p class="text-center text-gray-600 mt-4">
      Don't have an account?
      <%= link_to "Register here", signup_path, class: "text-blue-500 hover:underline" %>
    </p>
  </div>
</div>
