<%= form_with(model: [@product, @stock_transaction], local: true) do |form| %>
    <% if @stock_transaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@stock_transaction.errors.count, "error") %> prohibited this stock transaction from being saved:</h2>
        <ul>
          <% @stock_transaction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :transaction_type %>
      <%= form.select :transaction_type, ['add', 'subtract'] %>
    </div>
  
    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
    </div>
  
    <div class="field">
      <%= form.label :note %>
      <%= form.text_area :note %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  