<h1 class="text-3xl font-bold text-gray-800 mb-6">All Users</h1>

<table class="min-w-full table-auto bg-white shadow-lg rounded-lg p-6">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-6 py-3 text-left text-gray-700">Username</th>
      <th class="px-6 py-3 text-left text-gray-700">Email</th>
      <th class="px-6 py-3 text-left text-gray-700">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="border-b hover:bg-gray-50">
        <td class="px-6 py-3"><%= user.email %></td>
        <td class="px-6 py-3">
          <%= link_to 'View Profile', user_path(user), class: 'text-blue-500 hover:text-blue-700' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
