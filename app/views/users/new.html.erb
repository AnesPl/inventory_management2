<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="bg-white p-6 rounded-lg shadow-md w-96">
    <h1 class="text-2xl font-semibold mb-4 text-center">Sign Up</h1>

    <%= form_with model: @user, url: signup_path, local: true do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "block text-gray-700 font-medium" %>
        <%= form.text_field :email, class: "w-full p-2 border rounded-lg" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-gray-700 font-medium" %>
        <%= form.password_field :password, class: "w-full p-2 border rounded-lg" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Password confirmation", class: "block text-gray-700 font-medium" %>
        <%= form.password_field :password_confirmation, class: "w-full p-2 border rounded-lg mb-4" %> <!-- Added mb-4 -->
      </div>

      <div class="text-center">
        <%= form.submit "Sign Up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 mt-4 w-full" %>
      </div>
    <% end %>
  </div>
</div>
