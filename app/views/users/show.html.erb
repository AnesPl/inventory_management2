<p class="text-lg text-gray-600">Email: <%= @user.email %></p>

<h2 class="text-2xl font-bold text-gray-800 mt-6">Categories</h2>
<ul class="list-disc pl-6">
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category), class: "text-blue-500 hover:text-blue-700" %>
    </li>
  <% end %>
</ul>

<h2 class="text-2xl font-bold text-gray-800 mt-6">Products</h2>
<ul class="list-disc pl-6">
  <% @products.each do |product| %>
    <li>
      <%= link_to product.name, product_path(product), class: "text-blue-500 hover:text-blue-700" %>
    </li>
  <% end %>
</ul>
